/**order.wxss**/
.order_tab_box {
  white-space: normal;
  display: flex;
  box-shadow:0px 2px 2px 2px rgb(243, 243, 243);
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.order_tab{
  min-width: 25%;
  display:inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  padding: 25rpx 0;
}
.order_tab_active{
  border-bottom: 4rpx solid #F60;
}
.container {
  width: 100%;
}
