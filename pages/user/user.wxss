.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F60;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.list{
  width: 100%;
  padding: 20rpx 0 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border:solid 2rpx rgb(243, 243, 243);
  font-size: 26rpx;
  line-height: 60rpx;
}
.list_left{
  display: flex;
  align-items: center;
}
.list_img{
  width: 30rpx;
  height: 30rpx;
  padding-right: 10rpx;
}
.arrow{
width: 10px;
height: 10px;
display: block;
margin-right: 40rpx;
border-top: 2px solid #999;
border-right: 2px solid #999;
transform: rotate(45deg);
}

