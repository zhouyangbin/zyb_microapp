.section-select-box {
width: calc(100% - 60rpx);
padding: 20rpx 30rpx;
border-bottom: 2rpx solid #e2e2e2;
}
.select-content {
width: calc(100% - 60rpx);
background: white;
height: 80rpx;
line-height: 80rpx;
display: flex;
justify-content: center;
align-items: center;
font-size: 26rpx;
}
.search-text{
min-width: 60rpx;
min-height: 80rpx;
}
.select-text {
flex: 8;
margin-left: 20rpx;
background: #f5f4f4;
border: 2rpx solid #f0efef;
border-radius: 30px;
font-size: 26rpx;
padding-left: 20rpx;
height: 60rpx;
line-height: 60rpx;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}
.select-img {
margin-left: 20rpx;
width: 30rpx;
height: 30rpx;
transition: all .1s ease;
}

.select-list {
width: calc(100% - 30rpx);
background: white;
position: absolute;
border: 2rpx solid #e2e2e2;
border-top: none;
box-sizing: border-box;
z-index: 3;
max-height: 300rpx;
overflow: auto;
}

.select-list-item {
width: calc(100% - 40rpx);
height: 30px;
line-height: 30px;
border-top: 2rpx solid #e2e2e2;
padding: 0 10px;
text-align: left;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
font-size: 14px;
}

.select-list-item:first-child{
border-top: none;
}